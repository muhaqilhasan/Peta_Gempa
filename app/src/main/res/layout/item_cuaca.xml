<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvKota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jakarta Pusat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvSuhu" />

        <TextView
            android:id="@+id/tvCuacaDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cerah Berawan"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKota"
            app:layout_constraintEnd_toStartOf="@+id/tvSuhu" />

        <TextView
            android:id="@+id/tvSuhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30Â°C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0891B2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/viewIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#F59E0B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="-16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>