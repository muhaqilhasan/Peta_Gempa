<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".MainActivity">

    <!-- HEADER APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_app"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Bencana"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pantau Gempa &amp; Cuaca"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnRefresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_popup_sync"
                    app:tint="@color/text_primary"
                    android:background="@drawable/bg_rounded_nav"
                    android:backgroundTint="@color/white"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- KONTEN UTAMA -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 1. MAP WEBVIEW -->
        <WebView
            android:id="@+id/webViewMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"/>

        <!-- 2. LIST GEMPA -->
        <LinearLayout
            android:id="@+id/layoutListGempa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Gempa Terkini"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:background="@color/background_app"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGempa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="20dp"
                tools:listitem="@layout/item_gempa" />
        </LinearLayout>

        <!-- 3. SINGLE VIEW CUACA -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutCuaca"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prakiraan Cuaca"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berdasarkan lokasi Anda saat ini"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="8dp"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:id="@+id/bgCuaca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_gradient_cuaca"
                        android:padding="32dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvCuacaKota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memuat Lokasi..."
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvCuacaTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="#E0F2FE"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_rounded_nav"
                            android:backgroundTint="#30FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"/>

                        <TextView
                            android:id="@+id/tvCuacaSuhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="72sp"
                            android:fontFamily="sans-serif-light"
                            android:includeFontPadding="false"
                            android:layout_marginTop="24dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Celcius"
                            android:textColor="#E0F2FE"
                            android:textSize="14sp"
                            android:layout_marginTop="-8dp"/>

                        <TextView
                            android:id="@+id/tvCuacaDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="32dp"
                            android:background="@drawable/bg_rounded_nav"
                            android:backgroundTint="#20000000"
                            android:padding="16dp"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Angin"
                                    android:textColor="#BAE6FD"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/tvCuacaAngin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 km/j"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#40FFFFFF"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kelembapan"
                                    android:textColor="#BAE6FD"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/tvCuacaLembap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/text_tertiary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data bersumber dari BMKG (api.bmkg.go.id)"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/text_tertiary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:indeterminateTint="@color/brand_primary"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLatestGempa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/bgLatestMag"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_mag" />
                        <TextView
                            android:id="@+id/tvLatestMag"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/bg_circle_mag"
                                android:backgroundTint="@color/gempa_red"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gempa Terkini"
                                android:layout_marginStart="6dp"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:letterSpacing="0.05"
                                android:textStyle="bold"
                                android:textColor="@color/gempa_red" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLatestWilayah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memuat..."
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#E2E8F0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLatestTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:drawablePadding="6dp"
                        app:drawableStartCompat="@android:drawable/ic_menu_recent_history"
                        app:drawableTint="@color/text_tertiary"/>

                    <TextView
                        android:id="@+id/tvLatestDepth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                        app:drawableTint="@color/text_tertiary"
                        android:drawablePadding="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- BOTTOM NAVIGATION (Update Icons) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/btnNavMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- ICON BARU: ic_nav_map -->
                <ImageView
                    android:id="@+id/iconMap"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_map"
                    app:tint="@color/brand_primary" />

                <TextView
                    android:id="@+id/textMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Peta"
                    android:textSize="10sp"
                    android:textColor="@color/brand_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- ICON BARU: ic_nav_list -->
                <ImageView
                    android:id="@+id/iconList"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_list"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/textList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Gempa"
                    android:textSize="10sp"
                    android:textColor="@color/text_tertiary"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavCuaca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- ICON BARU: ic_nav_weather -->
                <ImageView
                    android:id="@+id/iconCuaca"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nav_weather"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/textCuaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuaca"
                    android:textSize="10sp"
                    android:textColor="@color/text_tertiary"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>